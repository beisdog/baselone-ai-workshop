{
  "name": "Baselone AI Workshop",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true",
      "mavenVersion": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "21",
      "nodeGypDependencies": true,
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "redhat.java",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/local/sdkman/candidates/java/current",
            "default": true
          }
        ],
        // Java Language Server im Standard-Modus starten
        "java.server.launchMode": "Standard",

        // Automatischer Import von Maven-Projekten
        "java.import.maven.enabled": true,
        "java.autobuild.enabled": true,

        // Maven-Einstellungen
        "maven.executable.preferMavenWrapper": true,
        "java.configuration.updateBuildConfiguration": "automatic",

        // Automatischer Projekt-Import beim Start
        "java.project.importOnFirstTimeStartup": "automatic",
        "java.completion.enabled": true,

        // Optional: Verbose-Logging f√ºr Debugging
        "java.trace.server": "messages"
      }
    }
  },

  "forwardPorts": [8080, 4200],

  "postCreateCommand": "java -version && mvn -version && node -v && npm -v && docker --version",

  "remoteUser": "vscode"
}